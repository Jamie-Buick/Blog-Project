<%- include("partials/header.ejs") %>


<div class="align-items-center text-align-centre"> 
    <% for (let i = 0; i < posts.length; i += 2) { %>
        <div class="cards row mb-2 mx-5">
            <div class="card1 col-md-6">
                <div class="row mx-5  border rounded overflow-hidden flex-md-row mb-2 shadow-sm h-md-250 position-relative">
                    <div class="col p-4 d-flex flex-column position-static">
                        <h1 class=" "><%= posts[i].title %></h1>
                        
                        <div class="mb-1"><%= posts[i].date %></div>
                        <% const contentWords = posts[i].content.split(' ').slice(0, 50).join(' ') + "..."; %>
                        <p class="card-text mb-2"><%= contentWords %></p>
                        <h5 class="mb-0"><%=posts[i].name %></h5>
                        <a href="/blog/<%= posts[i].id %>" class="icon-link gap-1 icon-link-hover stretched-link">
                            <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
                        </a>
                    </div>
                </div>
            </div>
            <% if (i + 1 < posts.length) { %>
                <div class="card2 col-md-6">
                    <div class="row mx-5 border rounded overflow-hidden flex-md-row mb-2 shadow-sm h-md-250 position-relative">
                        <div class="col p-4 d-flex flex-column position-static">
                            <h1 class=" "><%= posts[i + 1].title %></h1>
                        
                            <div class="mb-1"><%= posts[i + 1].date %></div>
                            <% const contentWords = posts[i + 1].content.split(' ').slice(0, 50).join(' ') + "..."; %>
                            <p class="card-text mb-2"><%= contentWords %></p>
                            <h5 class="mb-0"><%=posts[i + 1].name %></h5>
                            <a href="/blog/<%= posts[i + 1].id %>" class="icon-link gap-1 icon-link-hover stretched-link">
                                <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    <% } %>
</div>


















<%- include("partials/footer.ejs") %>